<!doctype html>

<!-- ASSIGN OUR ANGULAR MODULE -->
<html ng-app="scotchTodo">
<head>
    <!-- META -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"><!-- Optimize mobile viewport -->

    <title>MyBestMi</title>

    <!-- SCROLLS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css"><!-- load bootstrap -->
    <style>
        html { 
        	overflow-y:scroll; 
       	}

        body { 
        	padding-top:50px; 
        }

        #daygoal-list { 
        	margin-bottom:30px; 
        }
    </style>

    <!-- SPELLS -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script><!-- load jquery -->
    <script src="js/angular.min.js"></script><!-- load angular -->
    <script src="js/ng-file-upload-shim.min.js"></script>
    <script src="js/ng-file-upload.min.js"></script>
    <script src="js/controllers/main.js"></script> <!-- load up our controller -->
    <script src="js/services/daygoals.js"></script> <!-- load our daygoal service -->
    <script src="js/core.js"></script> <!-- load our main application -->

</head>
<!-- SET THE CONTROLLER AND GET ALL DAYGOALS -->
<body ng-controller="mainController">
    <div class="container">

        <!-- HEADER AND DAYGOALS COUNT -->
        <div class="jumbotron text-center">
            <% if (user.local.email == "test@test.com") { %>
                <h1>What up <%= user.local.display_name %>!!!!! <span class="label label-info">{{ Daygoal.length }}</span></h1>
            <% }
                else {
            %>
                <h1>You're not rob...</h1>
            <%
                }
            %>
        </div>

        <!-- DAYGOALS LIST -->
        <div id="daygoal-list" class="row">
            <div class="col-sm-4 col-sm-offset-4">

                <!-- LOOP OVER THE DAYGOALS IN $scope.daygoals -->
                <div class="checkbox" ng-repeat="daygoal in daygoals">
                    <label>
                        <input type="checkbox" ng-click="deleteDaygoal(daygoal._id)"> <a href="/uploads/{{Daygoal.photo}}" target="_blank">{{ daygoal.text }} {{ daygoal.weektarget }} ({{ daygoal.category }}) - {{ daygoal.author }} at {{ daygoal.duration }}</a>
                    </label>
                </div>

            </div>
        </div>

        <!-- FORM TO CREATE DAYGOALS -->
        <div id="daygoal-form" class="row">
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">

                        <!-- BIND THIS VALUE TO formData.text IN ANGULAR -->
                        <input type="text" class="form-control input-lg text-center" placeholder="Enter One of Your Top 5 Actions for Today" ng-model="formData.text">
                        <input type="text" class="form-control input-lg text-center" placeholder="Weekly Progress Action or Alleviate a Mind Gremlin" ng-model="formData.category">
                        <input type="text" class="form-control input-lg text-center" placeholder="Name the Weekly Goal That Will Progress from this Action" ng-model="formData.weektarget">
                        <input type="number" class="form-control input-lg text-center" placeholder="How Many Minutes Do You Need to Complete This Action" ng-model="formData.duration">
                        <input ngf-select="" ng-model="picFile" name="file" ngf-accept="'image/*'" required="false" type="file">
                    </div>

                    <!-- createDaygoal() WILL CREATE NEW Daygoal -->
                    <button type="submit" class="btn btn-primary btn-lg" ng-click="createDaygoal(picFile)">Add</button><br />
                    <a class="btn btn-danger btn-lg" href="/logout">Logout</a>
                </form>
            </div>
        </div>

    </div>

</body>
</html>